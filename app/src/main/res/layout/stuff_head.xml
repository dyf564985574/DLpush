<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/stuff_chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="viewEnd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:id="@+id/linearlayout01"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:orientation="horizontal"
               android:background="@color/electric_green"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="40dp"
               android:layout_alignParentStart="true"></LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="装机率"
               android:textSize="10dp"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/linearlayout01"
               android:layout_toEndOf="@+id/linearlayout01"
               android:layout_marginLeft="20dp"
               android:layout_marginStart="20dp" />
       </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/linearlayout02"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:background="@color/electric_green"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_alignParentStart="true"></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线率"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearlayout02"
            android:layout_toEndOf="@+id/linearlayout02"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/linearlayout03"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:background="@color/electric_green"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_alignParentStart="true"></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未装机率"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearlayout03"
            android:layout_toEndOf="@+id/linearlayout03"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
</LinearLayout>