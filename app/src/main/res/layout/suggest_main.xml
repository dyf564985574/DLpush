<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical"
        >

        <EditText
            android:layout_below="@+id/textID"
            android:id="@+id/suggest_ed"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/suggext_edittext"
            android:gravity="top"
            android:hint="@string/ed_suggest"
            android:paddingBottom="14.0dp"
            android:paddingTop="12.0dp"
            android:maxLength="150"
            android:paddingLeft="15.0dp"
            android:paddingRight="15.0dp"
            android:singleLine="false"
            android:textCursorDrawable="@null"
            android:textColor="@color/notices_info_read"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15.0sp" />
        <Button
            android:id="@+id/suggest_button"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_tip_one"
            android:padding="10.0dp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="12.0sp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/suggest_ed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
