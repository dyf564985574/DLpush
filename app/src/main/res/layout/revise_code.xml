<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/revise_rela"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/electric_green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back"
            android:id="@+id/revise_back">
            <RelativeLayout
                android:id="@+id/set_add_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:clickable="false"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ac1"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:background="#005555"
            android:layout_toRightOf="@+id/notices_back"
            android:layout_toEndOf="@+id/notices_back"></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/dialog_btn"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/revise_phone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="原密码:"
                        android:textColor="@color/electric_green"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="10sp"/>

                    <EditText
                        android:id="@+id/revise_ed01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                        android:maxLength="24"
                        android:password="true"
                        android:textColor="@color/electric_green"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/revise_phone1"
                        android:layout_toEndOf="@+id/revise_phone1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/dialog_btn"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/revise_phone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="新密码:"

                        android:textColor="@color/electric_green"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="10sp"/>

                    <EditText
                        android:id="@+id/revise_ed02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLength="24"
                        android:password="true"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/electric_green"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/revise_phone2"
                        android:layout_toEndOf="@+id/revise_phone2" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/dialog_btn"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/revise_phone3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="确认密码:"
                        android:textColor="@color/electric_green"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="10sp"/>

                    <EditText
                        android:id="@+id/revise_ed03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:singleLine="true"
                        android:maxLength="24"
                        android:password="true"
                        android:textColor="@color/electric_green"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/revise_phone3"
                        android:layout_toEndOf="@+id/revise_phone3" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/revise_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_tip_one" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/submit"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
