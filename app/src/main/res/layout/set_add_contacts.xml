<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/set_add_rela"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/electric_green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_people"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back"
            android:id="@+id/set_add_relativeLayout">
            <RelativeLayout
                android:id="@+id/set_add_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:clickable="false"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ac1"
                    android:layout_centerVertical="true"
                    />
                </RelativeLayout>
        </RelativeLayout>



    </RelativeLayout>
     <RelativeLayout
         android:id="@+id/add_btn"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:orientation="vertical" >
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="60dp">
                 <RelativeLayout
                     android:id="@+id/set_add_name01"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:layout_marginTop="20dp"
                     android:background="@drawable/suggext_edittext"
                     android:orientation="horizontal" >
                     <TextView
                         android:id="@+id/set_phone1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_centerVertical="true"
                         android:text="接收人:"
                         android:textColor="@color/electric_green"
                         android:layout_marginLeft="20sp"
                         android:layout_marginRight="10sp"/>

                     <TextView
                         android:id="@+id/set_add_ed01"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:background="@null"
                         android:singleLine="true"
                         android:textCursorDrawable="@null"
                         android:textColor="@color/electric_green"
                         android:clickable="false"
                         android:layout_centerVertical="true"
                         android:layout_toRightOf="@+id/set_phone1"
                         android:layout_toEndOf="@+id/set_phone1" />
                     <ImageView
                         android:id="@+id/set_add01"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@mipmap/delete_contacts"
                         android:padding="10dp"
                         android:layout_alignParentTop="true"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true" />


                 </RelativeLayout>
                 <RelativeLayout
                     android:id="@+id/add_notices01"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_gravity="center_horizontal"
                     android:background="@mipmap/point_rect"
                     android:layout_marginLeft="20dp"
                     android:visibility="gone"
                     android:layout_marginRight="20dp"
                     android:layout_alignParentBottom="true"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true">

                     <RelativeLayout
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_centerHorizontal="true"
                         android:layout_centerVertical="true"
                         android:orientation="horizontal">
                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"
                             android:background="@mipmap/add1"
                             android:layout_alignParentTop="true"
                             android:layout_marginRight="20dp"
                             android:layout_marginEnd="20dp"
                             android:id="@+id/imageView01" />
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textColor="@color/electric_green"
                             android:text="添 加 接 收 人"
                             android:textSize="18sp"
                             android:layout_centerVertical="true"
                             android:layout_toRightOf="@+id/imageView01"
                             android:layout_toEndOf="@+id/imageView01" />
                     </RelativeLayout>
                 </RelativeLayout>
              </RelativeLayout>



                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="60dp">
                 <RelativeLayout
                     android:id="@+id/set_add_name02"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:visibility="gone"
                     android:layout_marginTop="20dp"
                     android:background="@drawable/suggext_edittext"
                     android:orientation="horizontal" >
                     <TextView
                         android:id="@+id/set_phone2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_centerVertical="true"
                         android:text="短信接收人："
                         android:textColor="@color/electric_green"
                         android:layout_marginLeft="20sp"
                         android:layout_marginRight="10sp"/>

                     <TextView
                         android:id="@+id/set_add_ed02"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:background="@null"
                         android:singleLine="true"
                         android:maxLength="11"
                         android:clickable="false"
                         android:textCursorDrawable="@null"
                         android:numeric="integer"
                         android:textColor="@color/electric_green"
                         android:layout_centerVertical="true"
                         android:layout_toRightOf="@+id/set_phone2"
                         android:layout_toEndOf="@+id/set_phone2" />
                     <ImageView
                         android:id="@+id/set_add02"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@mipmap/delete_contacts"
                         android:padding="10dp"
                         android:layout_alignParentTop="true"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true"
                         android:layout_centerVertical="true"
                          />

                 </RelativeLayout>
                     <RelativeLayout
                         android:id="@+id/add_notices02"
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:layout_gravity="center_horizontal"
                         android:background="@mipmap/point_rect"
                         android:layout_alignParentBottom="true"
                         android:layout_marginRight="20dp"
                         android:layout_marginLeft="20dp"
                         android:layout_alignParentLeft="true"
                         android:layout_alignParentStart="true">
                         <RelativeLayout
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:orientation="horizontal">
                             <ImageView
                                 android:layout_width="40dp"
                                 android:layout_height="40dp"
                                 android:background="@mipmap/add1"
                                 android:layout_alignParentTop="true"
                                 android:layout_marginRight="20dp"
                                 android:layout_marginEnd="20dp"
                                 android:id="@+id/imageView02" />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textColor="@color/electric_green"
                                 android:text="添 加 接 收 人"
                                 android:textSize="18sp"
                                 android:layout_centerVertical="true"
                                 android:layout_toRightOf="@+id/imageView02"
                                 android:layout_toEndOf="@+id/imageView02" />
                             </RelativeLayout>



                     </RelativeLayout>
                 </RelativeLayout>
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="60dp">
                 <RelativeLayout
                     android:id="@+id/set_add_name03"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:visibility="gone"
                     android:layout_marginTop="20dp"
                     android:background="@drawable/suggext_edittext"
                     android:orientation="horizontal" >
                     <TextView
                         android:id="@+id/set_phone3"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_centerVertical="true"
                         android:text="短信接收人:"
                         android:textColor="@color/electric_green"
                         android:layout_marginLeft="20sp"
                         android:layout_marginRight="10sp"/>

                     <TextView
                         android:id="@+id/set_add_ed03"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:background="@null"
                         android:singleLine="true"
                         android:textCursorDrawable="@null"
                         android:numeric="integer"
                         android:clickable="false"
                         android:maxLength="11"
                         android:textColor="@color/electric_green"
                         android:layout_centerVertical="true"
                         android:layout_toRightOf="@+id/set_phone3"
                         android:layout_toEndOf="@+id/set_phone3" />
                      <ImageView
                         android:id="@+id/set_add03"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@mipmap/delete_contacts"
                         android:padding="10dp"
                          android:layout_alignParentTop="true"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentEnd="true"
                          android:layout_centerVertical="true" />

                 </RelativeLayout>
                     <RelativeLayout
                         android:id="@+id/add_notices03"
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:layout_gravity="center_horizontal"
                         android:background="@mipmap/point_rect"
                         android:layout_alignParentBottom="true"
                         android:layout_marginRight="20dp"
                         android:layout_marginLeft="20dp"
                         android:visibility="gone"
                         android:layout_alignParentLeft="true"
                         android:layout_alignParentStart="true">

                         <RelativeLayout
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:orientation="horizontal">
                             <ImageView
                                 android:layout_width="40dp"
                                 android:layout_height="40dp"
                                 android:background="@mipmap/add1"
                                 android:layout_alignParentTop="true"
                                 android:layout_marginRight="20dp"
                                 android:layout_marginEnd="20dp"
                                 android:id="@+id/imageView03" />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textColor="@color/electric_green"
                                 android:text="添 加 接 收 人"
                                 android:textSize="18sp"
                                 android:layout_centerVertical="true"
                                 android:layout_toRightOf="@+id/imageView03"
                                 android:layout_toEndOf="@+id/imageView03" />
                         </RelativeLayout>
                     </RelativeLayout>
                 </RelativeLayout>
             </LinearLayout>
            </RelativeLayout>
         </RelativeLayout>


</LinearLayout>
