<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/stuff_screen"
        android:layout_width="match_parent"
        android:background="@color/electric_green"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="@string/stuff_analy"
            android:textColor="@color/white"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/plus"
            android:onClick="toggleMenu"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="41dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/stuff_chart1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="viewEnd"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/linearlayout01"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/red"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"></LinearLayout>
        <TextView
            android:id="@+id/stuff_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总用户"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearlayout01"
            android:layout_toEndOf="@+id/linearlayout01"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/linearlayout02"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/online_color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"></LinearLayout>
        <TextView
            android:id="@+id/stuff_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线用户"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearlayout02"
            android:layout_toEndOf="@+id/linearlayout02"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/linearlayout03"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/offline_color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"></LinearLayout>
        <TextView
            android:id="@+id/stuff_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线用户"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearlayout03"
            android:layout_toEndOf="@+id/linearlayout03"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/linearlayout04"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/unlogin_color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"></LinearLayout>
        <TextView
            android:id="@+id/stuff_unlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未登陆用户"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearlayout04"
            android:layout_toEndOf="@+id/linearlayout04"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
</LinearLayout>