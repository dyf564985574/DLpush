<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/notices_list">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/propose_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/propose_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="15dp"
                android:ellipsize="end"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/notices_title"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/propose_color"
                android:layout_toStartOf="@+id/propose_color" />

            <TextView
                android:id="@+id/propose_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:maxLines="1"
                android:maxWidth="240dp"
                android:ellipsize="end"
                android:textColor="@color/notices_info"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:paddingBottom="3dp"
                android:layout_below="@+id/propose_item_title"
                android:layout_toLeftOf="@+id/propose_color"
                android:layout_marginRight="15dp"
                android:layout_toStartOf="@+id/propose_color" />

            <RelativeLayout
                android:id="@+id/propose_color"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/processed"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/propose_deal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/processed"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dotter_line"></LinearLayout>

</LinearLayout>
